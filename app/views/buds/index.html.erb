<% provide(:title, 'All Buds') %>
<h1>All Buds</h1>

<!-- temporary button, should only be accessable by admins -->
<%= if signed_in? && current_user.admin?
		link_to "Create Bud", new_bud_path, class: "btn btn-large btn-primary"
	end %>

<%= will_paginate %>
<div class="container-fluid">
	<table class="table buds">
		<thead>
			<tr>
				<th>Panel Name</th>
				<th>Bud UID</th>
				<th>Heart Beat</th>
				<th>Actions</th>
				<th>Building</th>
			</tr>
		<thead>
		<tbody>
			<%= render @buds %>
		</tbody>
	</table>
</div>
<%= will_paginate %>