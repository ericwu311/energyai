source 'https://rubygems.org'

gem 'rails', '3.2.7'
gem 'pg', '0.12.2'				# use postgres
gem 'jquery-rails', '2.0.2'
gem 'bootstrap-sass', '~> 2.0.4.0'	# To use twitterbootstrap base css
gem 'bcrypt-ruby', ' ~> 3.0.1'	# To use ActiveModel has_secure_password
gem 'faker', '1.0.1'			# gem for simulating data creation
gem 'will_paginate', '3.0.3'	# gem for autopaginating lists
gem 'bootstrap-will_paginate', '0.0.6'

group :development, :test do
  gem 'rspec-rails', '2.10.0'	# rspec
  gem 'guard-rspec', '0.5.5'	# using guard for testing
  gem 'annotate', '~> 2.5.0' # annotates models.
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '3.2.4'
  gem 'coffee-rails', '3.2.2'
  gem 'uglifier', '1.2.3'
end

group :test do
  gem 'capybara', '1.1.2'		# pairs with rspec to use english-like text 
  gem 'factory_girl_rails', '1.4.0' # use to create models for testing
  gem 'cucumber-rails', '1.2.1', require: false
  gem 'database_cleaner', '0.7.0'
  gem 'guard-spork', '0.3.2'  	#spork and guard for testing environment.
  gem 'spork', '0.9.0'
  gem 'launchy', '2.1.0'        # not sure what this gem does
  gem 'rb-fsevent', '0.9.1', :require => false  # fs event for mac osx
  gem 'growl', '1.0.3'    # this is for testing on mac osx
end

